package SoundEngine;

import java.awt.*;
import javax.swing.*;

public class GUIVisualizer extends JPanel {
	
	private JPanel leftPanel = null;
	private JPanel rightPanel = null;;
	
	public GUIVisualizer() {
		super(new GridLayout(1, 2));
		
		leftPanel = new JPanel();
		rightPanel = new JPanel();
		
		leftPanel.setForeground(Color.RED);
		rightPanel.setForeground(Color.YELLOW);
		
		add(leftPanel);
		add(rightPanel);
		
	}
	
	
	private void createAndShowGUI() {
		JFrame frame = new JFrame("Sound Visualizer!");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		frame.add(this);
		frame.setVisible(true);
		
	}
	
	public static GUIVisualizer makeGUI() {
		final GUIVisualizer frame = new GUIVisualizer();
		
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				frame.createAndShowGUI();
			}
		});
		
		return frame;
	}
	
	
}
