package SoundEngine;

import java.awt.*;
import javax.swing.*;

public class GUIVisualizer extends JFrame {
	
	private JPanel leftPanel;
	private JPanel rightPanel;
	
	public GUIVisualizer() {
		super("Sound Visualizer");
		
	}
	
	
	private void createAndShowGUI() {
		// Set up the window
		GUIVisualizer frame = this;
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		Container pane = frame.getContentPane();
		pane.setLayout(new GridLayout(2, 1));
		
		JPanel leftPanel = new JPanel();
		JPanel rightPanel = new JPanel();
		frame.leftPanel = leftPanel;
		frame.rightPanel = rightPanel;
		
		leftPanel.setForeground(Color.RED);
		rightPanel.setForeground(Color.RED);
		
		pane.add(leftPanel);
		pane.add(rightPanel);
		
		frame.setVisible(true);
	}
	
	public static void showGUI() {
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				createAndShowGUI();
			}
		});
	}
	
	
}
